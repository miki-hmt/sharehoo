<method name="type" />

<script type="text/javascript">
var i,text1,text2,textLength,t

function beginTyping()
{
i=0
text1=element.innerText
textLength=text1.length
element.innerText=""
text2=""
t=window.setInterval(element.id+".type()",speed)
}

function type()
{
